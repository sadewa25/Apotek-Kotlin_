<androidx.core.widget.NestedScrollView
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="edu.stts.submenu_home.supplier.insert.DetailSupplierFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:background="@color/colorPrimaryDark"
                android:layout_height="wrap_content">
            <TextView
                    android:padding="@dimen/margin_small"
                    android:textAllCaps="true"
                    android:layout_width="match_parent"
                    android:text="Insert Supplier"
                    android:textColor="@android:color/white"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.Toolbar>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_margin="@dimen/margin_supersmall"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_height="wrap_content">
            <EditText
                    android:id="@+id/supplier_nama"
                    android:layout_width="match_parent"
                    android:hint="Nama Supplier"
                    android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_margin="@dimen/margin_supersmall"
                android:layout_marginTop="@dimen/margin_supersmall"
                android:layout_height="wrap_content">
            <EditText
                    android:id="@+id/supplier_alamat"
                    android:layout_width="match_parent"
                    android:hint="Alamat"
                    android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_margin="@dimen/margin_supersmall"
                android:layout_marginTop="@dimen/margin_supersmall"
                android:layout_height="wrap_content">
            <EditText
                    android:id="@+id/supplier_phone"
                    android:layout_width="match_parent"
                    android:hint="Telephone"
                    android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_margin="@dimen/margin_supersmall"
                android:layout_marginTop="@dimen/margin_supersmall"
                android:layout_height="wrap_content">
            <EditText
                    android:id="@+id/supplier_npwp"
                    android:layout_width="match_parent"
                    android:hint="NPWP"
                    android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
                android:id="@+id/supplier_kota"
                android:layout_margin="@dimen/margin_supersmall"
                android:layout_marginTop="@dimen/margin_supersmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_margin="@dimen/margin_supersmall"
                android:layout_marginTop="@dimen/margin_supersmall"
                android:layout_height="wrap_content">
            <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/supplier_kodepos"
                    android:hint="Kode Pos"
                    android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_margin="@dimen/margin_supersmall"
                android:layout_marginTop="@dimen/margin_supersmall"
                android:layout_height="wrap_content">
            <EditText
                    android:id="@+id/supplier_email"
                    android:layout_width="match_parent"
                    android:hint="Email"
                    android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
                android:id="@+id/supplier_bank"
                android:layout_margin="@dimen/margin_supersmall"
                android:layout_marginTop="@dimen/margin_supersmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <ListView
                android:layout_width="match_parent"
                android:id="@+id/supplier_list_rekening"
                android:layout_height="wrap_content"/>

        <Button
                android:text="TAMBAH REKENING"
                android:id="@+id/supplier_rekening_btn"
                android:background="@color/colorPrimaryDark"
                android:textColor="@android:color/white"
                android:layout_margin="@dimen/margin_supersmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <ListView
                android:layout_width="match_parent"
                android:id="@+id/supplier_list_principal"
                android:layout_height="wrap_content"/>

        <Button
                android:text="TAMBAH REKENING"
                android:id="@+id/supplier_principal_btn"
                android:background="@color/colorPrimaryDark"
                android:textColor="@android:color/white"
                android:layout_margin="@dimen/margin_supersmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <Button
                android:text="SUBMIT"
                android:id="@+id/supplier_btn"
                android:background="@color/colorPrimaryDark"
                android:textColor="@android:color/white"
                android:layout_margin="@dimen/margin_supersmall"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>