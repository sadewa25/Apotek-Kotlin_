<androidx.core.widget.NestedScrollView
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.stts.submenu_home.kategoribarang.insert.InsertKategoriFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:background="@color/colorPrimaryDark"
                android:layout_height="wrap_content">
            <TextView
                    android:padding="@dimen/margin_small"
                    android:textAllCaps="true"
                    android:layout_width="match_parent"
                    android:text="Insert Kategori Barang"
                    android:textColor="@android:color/white"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.Toolbar>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_margin="@dimen/margin_supersmall"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_height="wrap_content">
            <EditText
                    android:id="@+id/et_namakategori"
                    android:layout_width="match_parent"
                    android:hint="Nama Kategori Barang"
                    android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
                android:id="@+id/btn_simpan"
                android:text="SUBMIT"
                android:background="@color/colorPrimaryDark"
                android:textColor="@android:color/white"
                android:layout_margin="@dimen/margin_supersmall"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>

